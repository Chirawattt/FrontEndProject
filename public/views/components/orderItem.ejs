<!-- order items -->
<div class="flex items-center bg-black text-white gap-4 py-2 px-4 border-t border-x hover:bg-gray-100 hover:text-black transition-all text-md">
    <% if (status != "done") { %>
        <div class="w-1/6 text-center"><a href="/orderDetail/<%= orderId %>" class="text-blue-400 underline hover:text-blue-800"><%= orderId %></a></div>
        <div class="w-1/6 text-center"><%= fname %></div>
        <div class="w-1/6 text-center"><%= totalAmount %>฿</div>
        <div class="w-1/4 text-center"><%= status %></div>
        <div class="w-1/6 text-center"><%= date %><p><%= time %></p></div>
        <div class="w-1/6 flex justify-center items-center">
            <a href="/updateStatus/<%= orderId %>" class="bg-gray-100 hover:bg-black text-green-500 py-1 px-2 text-lg font-bold rounded-md transition-all cursor-pointer">done</a>
        </div>
    <% } else { %>
        <div class="w-1/4 text-center"><a href="/orderDetail/<%= orderId %>" class="text-blue-400 underline hover:text-blue-800"><%= orderId %></a></div>
        <div class="w-1/4 text-center"> <%= fname %></div>
        <div class="w-1/4 text-center"><%= totalAmount %>฿</div>
        <div class="w-1/4 text-center text-green-500"><%= status %></div>
        <div class="w-1/4 text-center"><%= date %><p><%= time %></p></div>
    <% } %>
</div>