<!-- order items -->
<div class="flex items-center bg-white gap-4 py-2 px-4 border-t border-x hover:bg-gray-100 transition-all text-md">
    <!-- <div class="w-1/6 flex items-center gap-4">
        <div>
            <div class="text-md lg:text-lg"><%= orderId %></div>
        </div>
    </div> -->
    <% if (status != "done") { %>
        <div class="w-1/6 text-center"><a href="/orderDetail/<%= orderId %>" class="text-blue-600 underline hover:text-blue-800"><%= orderId %></a></div>
        <div class="w-1/6 text-center"><%= fname %></div>
        <div class="w-1/6 text-center"><%= totalAmount %>฿</div>
        <div class="w-1/4 text-center"><%= status %></div>
        <div class="w-1/6 text-center"><%= date %></div>
        <div class="w-1/6 flex justify-center items-center">
            <a href="/updateStatus/<%= orderId %>" class="bg-green-500 text-white py-1 px-2 rounded-md hover:bg-green-700 transition-all cursor-pointer">done</a>
        </div>
    <% } else { %>
        <div class="w-1/4 text-center"> <%= orderId %></div>
        <div class="w-1/4 text-center"> <%= fname %></div>
        <div class="w-1/4 text-center"><%= totalAmount %>฿</div>
        <div class="w-1/4 text-center"><%= status %></div>
        <div class="w-1/4 text-center"><%= date %></div>
    <% } %>
</div>