<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('components/utility.ejs') %>
    <title>Admin Page</title>
</head>
<body class="bg-[#0a0a0a] px-20 min-w-[800px]">
    <%- include('components/navbar.ejs') %>
    <div class="flex justify-between items-center">

        <% let breadDataCount = 0; %>
        <% for (let i = 0; i < bread.length; i++) { %>
            <% breadDataCount++; %>
        <% } %>
        <div class="p-10 lg:text-4xl text-2xl text-gray-400">
            Manage Breads Data (<%= breadDataCount %> items)
        </div>
        <div>
            <a href="/addBread" class="block py-2.5 px-5 me-10 mb-2 lg:text-lg text-md font-medium text-black focus:outline-none bg-white rounded-[5px]
                hover:bg-blue-500 hover:text-gray-100 transition-all duration-300 ease-in-out">ADD +</a>
        </div>
    </div>
    
    
   
    <div class="relative overflow-x-auto rounded-[5px]">
        <table class="w-full text-normal text-left text-gray-300">
            <thead class="text-xs text-black uppercase bg-gray-100 hover:bg-black hover:text-gray-100 transition-all duration-300 ease-in-out">
                <tr>
                    <th scope="col" class="px-10 py-3">
                        IMG
                    </th>
                    <th scope="col" class="px-6 py-3">
                        id
                    </th>
                    <th scope="col" class="px-6 py-3">
                        name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Price
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <a href="/editbread">edit</a>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <a href="/editbread">delete</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < bread.length; i++) { %>
                <tr class="bg-black border-b dark:border-gray-700 hover:bg-gray-100 hover:text-black transition-all duration-300 ease-in-out">
                    <th scope="row" class="px-6 py-4">
                        <img src="<%= bread[i].breadImg %>" alt="bread" class="w-14 h-14">
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium whitespace-nowrap">
                        <%= i+1 %>
                    </th>
                    <td class="px-6 py-4">
                        <%= bread[i].name %>
                    </td>
                    <td class="px-8 py-4">
                        <%= bread[i].price %>à¸¿
                    </td>
                    <td class="px-6 py-4">
                        <a href="/editBread/<%= bread[i].breadId %>" class="font-medium text-blue-500 hover:underline hover:text-amber-300 transition-all duration-300 ease-in-out">Edit</a>
                    </td>
                    <td class="px-6 py-4">
                        <a href="/deleteBread/<%= bread[i].breadId %>" class="font-medium text-red-500 hover:underline hover:text-amber-300 transition-all duration-300 ease-in-out">Delete</a>
                    </td>
                </tr>
                <% } %>
                
            </tbody>
    </table>
    </div>
    

</body>
</html>